# change window focus within space
alt + ctrl - left : yabai -m window --focus west || yabai -m display --focus west
alt + ctrl - right : yabai -m window --focus east || yabai -m display --focus east
alt + ctrl - up : yabai -m window --focus north || yabai -m display --focus north
alt + ctrl - down : yabai -m window --focus south || yabai -m display --focus south

# swap windows
shift + ctrl - down : yabai -m window --swap south
shift + ctrl - up : yabai -m window --swap north
shift + ctrl - left : yabai -m window --swap west || \
                        ( yabai -m window --display west && \
                        yabai -m display --focus west )
shift + ctrl - right : yabai -m window --swap east || \
                        ( yabai -m window --display east && \
                        yabai -m display --focus east )


#change focus between external displays (left and right)
alt - s: yabai -m display --focus west
alt - g: yabai -m display --focus east

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# cannot focus space due to an error with the scripting-addition.
#cmd + alt - left : yabai -m space --focus prev
#cmd + alt - right: yabai -m space --focus next


# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 7:4:1:1:2:2

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

#move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;

# open terminal, blazingly fast compared to iTerm/Hyper
# alt - return : /Applications/Alacritty.app//Contents/MacOS/alacritty
alt - return : open -n /Applications/Ghostty.app

shift + ctrl - h : yabai -m window --resize right:-20:0 2> /dev/null || yabai -m window --resize left:-20:0 2> /dev/null
shift + ctrl - j : yabai -m window --resize bottom:0:20 2> /dev/null || yabai -m window --resize top:0:20 2> /dev/null
shift + ctrl - k : yabai -m window --resize bottom:0:-20 2> /dev/null || yabai -m window --resize top:0:-20 2> /dev/null
shift + ctrl - l : yabai -m window --resize right:20:0 2> /dev/null || yabai -m window --resize left:20:0 2> /dev/null
